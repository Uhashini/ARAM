{
  "name": "ipv-intervention-system",
  "version": "1.0.0",
  "description": "IPV Intervention System - MERN Stack Application",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "test": "concurrently \"npm run test:server\" \"npm run test:client\"",
    "test:server": "cd backend && npm test",
    "test:client": "cd frontend && npm test -- --watchAll=false",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "concurrently": "^8.2.2"
  },
  "keywords": ["ipv", "healthcare", "intervention", "mern", "react", "nodejs"],
  "author": "",
  "license": "ISC"
}
